@model ZavrsenProekt.ViewModels.PosetaTuristiEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Poseta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Poseta.Id" />
            <div class="form-group">
                <label asp-for="Poseta.Ime" class="control-label"></label>
                <input asp-for="Poseta.Ime" class="form-control" />
                <span asp-validation-for="Poseta.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poseta.Znamenitost" class="control-label"></label>
                <input asp-for="Poseta.Znamenitost" class="form-control" />
                <span asp-validation-for="Poseta.Znamenitost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poseta.Price" class="control-label"></label>
                <input asp-for="Poseta.Price" class="form-control" />
                <span asp-validation-for="Poseta.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poseta.Komentar" class="control-label"></label>
                <input asp-for="Poseta.Komentar" class="form-control" />
                <span asp-validation-for="Poseta.Komentar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poseta.DatumPoseta" class="control-label"></label>
                <input asp-for="Poseta.DatumPoseta" class="form-control" />
                <span asp-validation-for="Poseta.DatumPoseta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poseta.TuristickiVodicId" class="control-label"></label>
                <select asp-for="Poseta.TuristickiVodicId" class="form-control" asp-items="ViewBag.TuristickiVodicId">
                    <option value="">Select</option>
                </select>
                <span asp-validation-for="Poseta.TuristickiVodicId" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <label class="control-label">Turisti</label>
                <select asp-for="SelectedTuristi" class="form-control js-example-basic-multiple" asp-items="Model.TuristiList">
                </select>
                <span asp-validation-for="SelectedTuristi" class="text-danger">
                </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src ="https://code.jquery.com/jquery-3.2.1.min.js">
        </script>
        <script src ="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js">
            </script>
            <script>$(document).ready(function() {$("#SelectedTuristi").select2();});</script>
}
