@model ZavrsenProekt.ViewModels.MoiPosetiVodic

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TuristickiVodic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vodic.Id" />
            <div class="form-group">
                <label asp-for="Vodic.Ime" class="control-label"></label>
                <input asp-for="Vodic.Ime" class="form-control" />
                <span asp-validation-for="Vodic.Ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vodic.Prezime" class="control-label"></label>
                <input asp-for="Vodic.Prezime" class="form-control" />
                <span asp-validation-for="Vodic.Prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vodic.Obrazovanie" class="control-label"></label>
                <input asp-for="Vodic.Obrazovanie" class="form-control" />
                <span asp-validation-for="Vodic.Obrazovanie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.2.1.min.js">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js">
    </script>
    <script>$(document).ready(function() {$("#SelectedTuristi").select2();});</script>
}
