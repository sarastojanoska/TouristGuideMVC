@model ZavrsenProekt.Models.VkluciSe
@{
    @ViewData["Title"]
}
<h1>Edit</h1>
<h4>Enrollment</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Poseta)
    </dt>
    <dt class="col-sm-10">
        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.PosetaId"></a>
        @Html.DisplayFor(model => model.Poseta.Id)

    </dt>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Turist)
    </dt>
    <dd class="col-sm-10">
        <a asp-controller="Turists" asp-action="Details" asp-route-id="@Model.TouristId">
            @Html.DisplayFor(model => model.Turist.FullName)
        </a>
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Turist.PassportId)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Turist.PassportId)
    </dd>
    
</dl>
<div class="row">
    <div class="col-md-4">
        <form asp-controller="VklciSes" asp-action="EditStatusPoPoseta">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="BrojKartica" class="control-label"></label>
                <input asp-for="BrojKartica" class="form-control" />
                <span asp-validation-for="BrojKartica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVC" class="control-label"></label>
                <input asp-for="CVC" class="form-control" />
                <span asp-validation-for="CVC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentDate" class="control-label"></label>
                <input asp-for="PaymentDate" class="form-control" />
                <span asp-validation-for="PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidnostData" class="control-label"></label>
                <input asp-for="ValidnostData" class="form-control" />
                <span asp-validation-for="ValidnostData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-controller="VkluciSes" asp-action="MoiTuristiPoPoseta" asp-route-id="@ViewData["crs"]">Edit</a>
    </div>
